# Environment Configuration for Code Execution Server

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration (URLs that can access this server)
FRONTEND_URL=http://localhost:3002
BACKEND_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
EXECUTION_RATE_LIMIT_WINDOW_MS=60000
EXECUTION_RATE_LIMIT_MAX_REQUESTS=10

# Code Execution Limits
MAX_EXECUTION_TIME=10000
DEFAULT_EXECUTION_TIME=5000
MAX_CODE_SIZE=1048576
MAX_STDIN_SIZE=65536
MAX_TEST_CASES=100

# File System
TEMP_DIR=./temp
CLEANUP_INTERVAL=300000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/compiler-server.log

# Security
ALLOWED_IPS=127.0.0.1,::1
ENABLE_SECURITY_HEADERS=true
ENABLE_REQUEST_VALIDATION=true

# Development Settings (remove in production)
ENABLE_DEBUG_LOGS=true
ENABLE_CODE_PREVIEW=true
SHOW_ERROR_STACK=true
